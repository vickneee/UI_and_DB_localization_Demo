<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ListView?>
<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="bmi.bmicalculatormysql.HelloController">
    <padding>
        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
    </padding>

    <ComboBox fx:id="languageSelector" onAction="#setLanguage" />

    <TextField fx:id="keyNameField" promptText="Key" />
    <TextField fx:id="translationField" promptText="Translation" />

    <Button fx:id="addTranslationButton" text="Add Translation" />

    <ListView fx:id="translationsList" prefHeight="200.0" prefWidth="300.0" />

</VBox>
